<% if message.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: message, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :body, "Contenido" %><br>
    <%= f.text_area :body, rows: 3 %>
  </div>

  <div class="mb-3">
    <%= f.label :user_id, "Autor" %><br>
    <%= f.collection_select :user_id, User.all, :id, :email, prompt: "Selecciona un usuario" %>
  </div>

  <div class="mb-3">
    <%= f.label :chat_id, "Chat" %><br>
    <%= f.collection_select :chat_id, Chat.all, :id, :id, prompt: "Selecciona un chat" %>
  </div>

  <%= f.submit "Guardar", class: "btn btn-primary" %>
<% end %>
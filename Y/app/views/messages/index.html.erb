<h1>Listado de Mensajes</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th><th>Chat</th><th>Usuario</th><th>Texto</th><th>Ver</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |m| %>
      <tr>
        <td><%= m.id %></td>
        <td><%= m.chat_id %></td>
        <td><%= m.user.first_name %></td>
        <td><%= truncate(m.body, length: 30) %></td>
        <td><%= link_to "Mostrar", message_path(m), class: "btn btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

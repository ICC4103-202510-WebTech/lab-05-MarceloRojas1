<h1>Mensajes</h1>

<% if can? :create, Message %>
  <%= link_to "Nuevo mensaje", new_message_path %>
<% end %>

<ul>
  <% @messages.each do |message| %>
    <li>
      <strong><%= message.user.email %>:</strong> <%= message.body %>

      <% if can? :edit, message %>
        | <%= link_to "Editar", edit_message_path(message) %>
      <% end %>

      <% if can? :destroy, message %>
        | <%= link_to "Eliminar", message_path(message),
                      method: :delete,
                      data: { confirm: "Â¿Seguro?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

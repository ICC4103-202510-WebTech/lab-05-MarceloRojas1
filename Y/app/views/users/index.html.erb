<h1>Usuarios</h1>

<% if can? :create, User %>
  <%= link_to "Nuevo usuario", new_user_path %>
<% end %>

<ul>
  <% @users.each do |u| %>
    <li>
      <%= link_to u.email, user_path(u) %>

      <% if can? :edit, u %>
        | <%= link_to "Editar", edit_user_path(u) %>
      <% end %>
    </li>
  <% end %>
</ul>
